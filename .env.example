# NyxTrade Environment Variables
# Copy this file to .env and fill in your actual values

# Google Cloud & A2A ADK
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GOOGLE_CLOUD_PROJECT=your-google-cloud-project
GOOGLE_API_KEY=your_google_api_key_for_gemini

# Security Settings
NYXTRADE_MASTER_PASSWORD=your_very_secure_master_password
ENCRYPTION_ENABLED=true

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/nyxtrade
REDIS_URL=redis://localhost:6379

# Exchange API Keys
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_SECRET_KEY=your_coinbase_secret_key
COINBASE_PASSPHRASE=your_coinbase_passphrase
KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_SECRET_KEY=your_kraken_secret_key

# Blockchain RPC URLs
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
BSC_RPC_URL=https://bsc-dataseed.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com/

# Wallet Configuration (NEVER store private keys in .env!)
# Private keys are managed securely by SecureWalletManager
# Only store wallet metadata and public information
TRADING_WALLET_ADDRESS=0x1234567890123456789012345678901234567890
BACKUP_WALLET_ADDRESS=0x0987654321098765432109876543210987654321

# SECURITY WARNING: NEVER put private keys, mnemonics, or passwords in this file!
# Use the secure wallet manager instead:
# - Private keys are encrypted and stored in system keyring
# - Master password is required for decryption
# - Hardware wallets are supported for maximum security

# External APIs
NEWS_API_KEY=your_news_api_key
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
COINGECKO_API_KEY=your_coingecko_api_key
MESSARI_API_KEY=your_messari_api_key

# Email Alerts
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Telegram Alerts
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Security
JWT_SECRET_KEY=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Development
DEBUG=false
TEST_MODE=false
PAPER_TRADING=true
